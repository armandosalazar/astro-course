---
// TODO: Top-Level Await
const response = await fetch("https://jsonplaceholder.typicode.com/posts");
const posts = await response.json();

// TODO: Components
import Card from "../components/card.astro";
---

<h1 style="text-align: center;">My Posts</h1>
{
    // posts.map((post: { title: unknown; id: unknown; body: unknown }) => (
    //     <Card title={post.title} id={post.id} body={post.body} />
    // ))

    posts.map((post: { title: string; id: number; body: string }) => (
        <Card title={post.title} id={post.id} body={post.body} />
    ))
}

<style>
    body {
        font-family:
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            Oxygen,
            Ubuntu,
            Cantarell,
            "Open Sans",
            "Helvetica Neue",
            sans-serif;
    }
</style>
